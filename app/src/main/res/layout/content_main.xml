<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="whiskarek.andrewshkrob.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <whiskarek.andrewshkrob.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/my_photo" />

        <ImageView
            android:id="@+id/ivGitHubLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tvURL"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="55dp"
            android:layout_marginStart="13dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/github_logo" />

        <TextView
            android:id="@+id/tvURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:layout_toEndOf="@+id/ivGitHubLogo"
            android:gravity="left|center"
            android:text="github.com/Whiskarek/AndrewShkrob"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
