<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rgModule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDefaultModelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbDefaultModelDescription"
            android:textSize="@dimen/model_description" />

        <RadioButton
            android:id="@+id/rbDefaultModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rbDefaultModel"
            android:textAlignment="center"
            android:textSize="@dimen/model" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/indent" />

        <RadioButton
            android:id="@+id/rbSolidModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rbSolidModel"
            android:textAlignment="center"
            android:textSize="@dimen/model" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rbSolidModelDescription"
            android:textSize="@dimen/model_description" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>