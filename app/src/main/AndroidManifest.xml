<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="whiskarek.andrewshkrob">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".LauncherApplication"
        android:allowBackup="false"
        android:icon="@drawable/photo_circle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/photo_circle"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6cf5ad29e988c308b4c4f9e63b998d629b942347" />
        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />

        <activity
            android:name=".activity.main.MainActivity"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"
            android:theme="@style/AppThemeLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.welcomepage.WelcomePageActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeLight" />
        <activity
            android:name=".activity.settings.SettingsActivity"
            android:label="@string/nav_drawer_settings"
            android:launchMode="singleTask"
            android:parentActivityName=".activity.main.MainActivity"
            android:stateNotNeeded="true"
            android:theme="@style/AppThemeLight" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/developer_name"
            android:parentActivityName=".activity.main.MainActivity"
            android:theme="@style/AppThemeLight.NoActionBar"/>

        <service android:name=".background.ImageService" />

    </application>

</manifest>